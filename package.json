{
  "name": "codebridge",
  "displayName": "CodeBridge - AI Context & Workflow",
  "description": "The missing link between VS Code and LLMs. Copy context, project trees, and generate files seamlessly.",
  "version": "2.5.0",
  "publisher": "fetchFromServer",
  "icon": "images/icon.png",
  "keywords": [
    "ai",
    "llm",
    "context",
    "chatgpt",
    "claude",
    "copilot",
    "prompt engineering",
    "copy code",
    "workflow",
    "productivity",
    "automation"
  ],
  "categories": [
    "AI",
    "Other"
  ],
  "homepage": "https://github.com/fetchFromServer/codebridge#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/fetchFromServer/codebridge.git"
  },
  "bugs": {
    "url": "https://github.com/fetchFromServer/codebridge/issues"
  },
  "main": "./dist/desktop/extension.js",
  "browser": "./dist/web/extension.js",
  "engines": {
    "vscode": "^1.104.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "update:latest": "npm install -g npm-check-updates && ncu -u && npm install",
    "compile": "npm-run-all --parallel compile:desktop compile:web",
    "watch": "npm-run-all --parallel watch:desktop watch:web",
    "package": "npm-run-all --parallel package:desktop package:web",
    "compile:desktop": "node esbuild.js --platform=desktop",
    "watch:desktop": "node esbuild.js --platform=desktop --watch",
    "package:desktop": "node esbuild.js --platform=desktop --production",
    "compile:web": "node esbuild.js --platform=web",
    "watch:web": "node esbuild.js --platform=web --watch",
    "package:web": "node esbuild.js --platform=web --production",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.104.0",
    "@vscode/test-web": "^0.0.75",
    "esbuild": "^0.27.0",
    "glob": "^12.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "activationEvents": [
    "onCommand:extension.copyAllContents",
    "onCommand:extension.copyWithPrompt",
    "onCommand:extension.generateFromClipboard",
    "onCommand:extension.copyProjectTree"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.copyAllContents",
        "title": "Copy Code",
        "icon": "$(copy)"
      },
      {
        "command": "extension.copyWithPrompt",
        "title": "Copy + AI Prompt",
        "icon": "$(beaker)"
      },
      {
        "command": "extension.generateFromClipboard",
        "title": "Generate Files from Clipboard"
      },
      {
        "command": "extension.copyProjectTree",
        "title": "Copy Tree",
        "icon": "$(list-tree)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyAllContents",
          "group": "1_codebridge@1",
          "when": "config.codeBridge.enabledFeatures.copyContents"
        },
        {
          "command": "extension.copyWithPrompt",
          "group": "1_codebridge@2",
          "when": "config.codeBridge.enabledFeatures.copyWithPrompt"
        },
        {
          "command": "extension.generateFromClipboard",
          "group": "1_codebridge@3",
          "when": "config.codeBridge.enabledFeatures.generateFiles"
        },
        {
          "command": "extension.copyProjectTree",
          "group": "1_codebridge@4",
          "when": "config.codeBridge.enabledFeatures.projectTree"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.copyWithPrompt",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "config.codeBridge.enabledFeatures.copyWithPrompt"
      },
      {
        "command": "extension.generateFromClipboard",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "config.codeBridge.enabledFeatures.generateFiles"
      }
    ],
    "configuration": {
      "title": "CodeBridge",
      "properties": {
        "codeBridge.enabledFeatures": {
          "type": "object",
          "default": {
            "copyContents": true,
            "copyWithPrompt": true,
            "generateFiles": true,
            "projectTree": true
          },
          "description": "Toggle individual commands to tailor the extension to your specific workflow.",
          "properties": {
            "copyContents": {
              "type": "boolean",
              "default": true,
              "description": "Enable basic 'Copy Code' command."
            },
            "copyWithPrompt": {
              "type": "boolean",
              "default": true,
              "description": "Enable 'Copy + AI Prompt' command."
            },
            "generateFiles": {
              "type": "boolean",
              "default": true,
              "description": "Enable 'Generate Files from Clipboard' command."
            },
            "projectTree": {
              "type": "boolean",
              "default": true,
              "description": "Enable 'Copy Tree' command."
            }
          },
          "scope": "resource"
        },
        "codeBridge.notifications.disableSuccess": {
          "type": "boolean",
          "default": false,
          "description": "[General] Quiet mode. Hides success notifications but keeps error alerts.",
          "scope": "resource"
        },
        "codeBridge.copy.raw": {
          "type": "boolean",
          "default": false,
          "description": "[Copy] Plain text mode. Skips Markdown formatting, file paths, and headers.",
          "scope": "resource"
        },
        "codeBridge.copy.includeStats": {
          "type": "boolean",
          "default": false,
          "description": "[Copy] Add a summary header with file counts and token estimates.",
          "scope": "resource"
        },
        "codeBridge.copy.codeFence": {
          "type": "string",
          "default": "```",
          "description": "[Copy] Custom Markdown fence (e.g., ``` or ~~~). Ignored in raw mode.",
          "scope": "resource"
        },
        "codeBridge.copy.removeLeadingWhitespace": {
          "type": "boolean",
          "default": false,
          "description": "[Copy] Trim leading indentation to save tokens (Use with caution on Python/YAML).",
          "scope": "resource"
        },
        "codeBridge.copy.minifyToSingleLine": {
          "type": "boolean",
          "default": false,
          "description": "[Copy] Aggressive minification. Collapses files into single lines.",
          "scope": "resource"
        },
        "codeBridge.copy.maxFileSize": {
          "type": "number",
          "default": 0,
          "description": "[Copy] Safety limit. Skip files larger than this (in bytes). 0 = Unlimited.",
          "scope": "resource"
        },
        "codeBridge.copy.lineWarningLimit": {
          "type": "number",
          "default": 50000,
          "description": "[Copy] Warning threshold for total line count before copying.",
          "scope": "resource"
        },
        "codeBridge.prompt.custom": {
          "type": "object",
          "default": {
            "Analyze & Contextualize": "Act as a Principal Architect. Analyze the provided codebase. Identify the architectural pattern, data flow, and external dependencies. Summarize the system's purpose in 3 bullets, then await my specific questions.",
            "Deep Code Review": "Review this code as a strict Senior Engineer. Focus exclusively on: 1. Security vulnerabilities. 2. Performance bottlenecks. 3. Race conditions or Async bugs. 4. Maintainability issues. Ignore trivial formatting. For each issue, explain the risk and provide the fixed code block.",
            "Refactor to Modern Standards": "Refactor this code for production. Apply SOLID principles, improve type safety, and reduce cyclomatic complexity. Replace legacy patterns with modern language features. Output the full refactored code with comments explaining key changes.",
            "Write Technical Docs": "Generate developer-facing documentation for this code. Include: 1. Purpose/Summary. 2. API signature (Inputs/Outputs). 3. A concrete usage example. 4. Important caveats or constraints."
          },
          "description": "[Prompts] Customize your AI personas and standard tasks.",
          "scope": "resource"
        },
        "codeBridge.generator.overwriteExisting": {
          "type": "boolean",
          "default": false,
          "description": "[Generator] Force overwrite existing files without confirmation.",
          "scope": "resource"
        },
        "codeBridge.generator.disableFileSelection": {
          "type": "boolean",
          "default": false,
          "description": "[Generator] Skip the file selection list and generate everything immediately.",
          "scope": "resource"
        },
        "codeBridge.tree.style": {
          "type": "string",
          "default": "classic",
          "description": "[Tree] Visual style for the directory structure.",
          "enum": [
            "classic",
            "modern",
            "minimal",
            "markdown"
          ],
          "enumDescriptions": [
            "Standard ASCII tree (├──)",
            "Clean look without vertical pipes",
            "Indentation only (ideal for large trees)",
            "Markdown bullet list format"
          ],
          "scope": "resource"
        },
        "codeBridge.tree.includeHidden": {
          "type": "boolean",
          "default": false,
          "description": "[Tree] Include dotfiles (e.g., .env, .gitignore) in the output.",
          "scope": "resource"
        },
        "codeBridge.tree.maxDepth": {
          "type": "number",
          "default": 0,
          "description": "[Tree] Limit directory depth. 0 = Unlimited.",
          "scope": "resource"
        },
        "codeBridge.tree.directoriesOnly": {
          "type": "boolean",
          "default": false,
          "description": "[Tree] Hide files, show folder structure only.",
          "scope": "resource"
        }
      }
    }
  }
}
