{
  "name": "codebridge",
  "displayName": "CodeBridge - AI Context & Workflow",
  "description": "The missing link between VS Code and LLMs. Copy context, project trees, and generate files seamlessly.",
  "version": "2.5.2",
  "publisher": "fetchFromServer",
  "icon": "images/icon.png",
  "keywords": [
    "ai",
    "llm",
    "context",
    "chatgpt",
    "claude",
    "copilot",
    "prompt engineering",
    "copy code",
    "workflow",
    "productivity",
    "automation"
  ],
  "categories": [
    "AI",
    "Other"
  ],
  "homepage": "https://github.com/fetchFromServer/codebridge#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/fetchFromServer/codebridge.git"
  },
  "bugs": {
    "url": "https://github.com/fetchFromServer/codebridge/issues"
  },
  "main": "./dist/desktop/extension.js",
  "browser": "./dist/web/extension.js",
  "engines": {
    "vscode": "^1.104.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "update:latest": "npm install -g npm-check-updates && ncu -u && npm install",
    "compile": "npm-run-all --parallel compile:desktop compile:web",
    "watch": "npm-run-all --parallel watch:desktop watch:web",
    "package": "npm-run-all --parallel package:desktop package:web",
    "compile:desktop": "node esbuild.js --platform=desktop",
    "watch:desktop": "node esbuild.js --platform=desktop --watch",
    "package:desktop": "node esbuild.js --platform=desktop --production",
    "compile:web": "node esbuild.js --platform=web",
    "watch:web": "node esbuild.js --platform=web --watch",
    "package:web": "node esbuild.js --platform=web --production",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.104.0",
    "@vscode/test-web": "^0.0.78",
    "esbuild": "^0.27.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.copyAllContents",
        "title": "Copy for AI",
        "shortTitle": "Copy Context",
        "icon": "$(copy)"
      },
      {
        "command": "extension.copyWithPrompt",
        "title": "Copy with Instruction...",
        "shortTitle": "Copy w/ Prompt",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "extension.copyWithDiagnostics",
        "title": "Copy with Active Errors",
        "shortTitle": "Copy w/ Errors",
        "icon": "$(bug)"
      },
      {
        "command": "extension.copyWithDeepAnalysis",
        "title": "Bundle Dependencies (Deep Scan)",
        "shortTitle": "Deep Bundle",
        "icon": "$(references)"
      },
      {
        "command": "extension.copyProjectTree",
        "title": "Copy Project Structure (Tree)",
        "icon": "$(list-tree)"
      },
      {
        "command": "extension.copyProjectTreeFolders",
        "title": "Copy Directory Skeleton",
        "icon": "$(folder)"
      },
      {
        "command": "extension.copyProjectTreeShallow",
        "title": "Copy Top-Level Only",
        "icon": "$(list-flat)"
      },
      {
        "command": "extension.generateFromClipboard",
        "title": "Create Files from Clipboard",
        "icon": "$(new-file)"
      }
    ],
    "submenus": [
      {
        "id": "codebridge.copyOptions",
        "label": "CodeBridge Context",
        "icon": "$(hubot)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyAllContents",
          "group": "1_cutcopypaste@1",
          "when": "filesExplorerFocus && config.codeBridge.enabledFeatures.copyContents"
        },
        {
          "submenu": "codebridge.copyOptions",
          "group": "1_cutcopypaste@2",
          "when": "filesExplorerFocus"
        },
        {
          "command": "extension.generateFromClipboard",
          "group": "1_cutcopypaste@3",
          "when": "filesExplorerFocus && config.codeBridge.enabledFeatures.generateFiles"
        }
      ],
      "codebridge.copyOptions": [
        {
          "command": "extension.copyWithPrompt",
          "group": "1_smart_actions",
          "when": "config.codeBridge.enabledFeatures.copyWithPrompt"
        },
        {
          "command": "extension.copyWithDeepAnalysis",
          "group": "1_smart_actions",
          "when": "config.codeBridge.enabledFeatures.copyWithPrompt"
        },
        {
          "command": "extension.copyWithDiagnostics",
          "group": "2_debug_actions",
          "when": "config.codeBridge.enabledFeatures.copyContents"
        },
        {
          "command": "extension.copyProjectTree",
          "group": "3_structure",
          "when": "config.codeBridge.enabledFeatures.projectTree"
        },
        {
          "command": "extension.copyProjectTreeFolders",
          "group": "3_structure",
          "when": "config.codeBridge.enabledFeatures.projectTree"
        },
        {
          "command": "extension.copyProjectTreeShallow",
          "group": "3_structure",
          "when": "config.codeBridge.enabledFeatures.projectTree"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.copyWithPrompt",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "config.codeBridge.enabledFeatures.copyWithPrompt"
      },
      {
        "command": "extension.generateFromClipboard",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "config.codeBridge.enabledFeatures.generateFiles"
      }
    ],
    "configuration": {
      "title": "CodeBridge",
      "properties": {
        "codeBridge.enabledFeatures": {
          "type": "object",
          "order": 1,
          "default": {
            "copyContents": true,
            "copyWithPrompt": true,
            "generateFiles": true,
            "projectTree": true
          },
          "markdownDescription": "Toggle individual commands to tailor the extension to your specific workflow.",
          "properties": {
            "copyContents": {
              "type": "boolean",
              "default": true
            },
            "copyWithPrompt": {
              "type": "boolean",
              "default": true
            },
            "generateFiles": {
              "type": "boolean",
              "default": true
            },
            "projectTree": {
              "type": "boolean",
              "default": true
            }
          },
          "scope": "resource"
        },
        "codeBridge.notifications.disableSuccess": {
          "type": "boolean",
          "order": 2,
          "default": false,
          "markdownDescription": "**Quiet Mode**: Hides success notifications but keeps error alerts.",
          "scope": "resource"
        },
        "codeBridge.copy.raw": {
          "type": "boolean",
          "order": 10,
          "default": false,
          "markdownDescription": "**Plain Text Mode**: Copies code without Markdown formatting or headers.",
          "scope": "resource"
        },
        "codeBridge.copy.includeStats": {
          "type": "boolean",
          "order": 11,
          "default": false,
          "markdownDescription": "Add a summary header with file counts and token estimates.",
          "scope": "resource"
        },
        "codeBridge.copy.codeFence": {
          "type": "string",
          "order": 12,
          "default": "```",
          "markdownDescription": "Custom Markdown fence (e.g., ``` or ~~~).",
          "scope": "resource"
        },
        "codeBridge.copy.removeLeadingWhitespace": {
          "type": "boolean",
          "order": 13,
          "default": false,
          "markdownDescription": "Trim leading indentation to save tokens.",
          "scope": "resource"
        },
        "codeBridge.copy.minifyToSingleLine": {
          "type": "boolean",
          "order": 14,
          "default": false,
          "markdownDescription": "**Aggressive Minification**: Collapses files into single lines.",
          "scope": "resource"
        },
        "codeBridge.copy.maxFileSize": {
          "type": "number",
          "order": 15,
          "default": 0,
          "markdownDescription": "Skip files larger than this (in bytes). `0` = Unlimited.",
          "scope": "resource"
        },
        "codeBridge.copy.lineWarningLimit": {
          "type": "number",
          "order": 16,
          "default": 50000,
          "markdownDescription": "Show warning if output exceeds this line count.",
          "scope": "resource"
        },
        "codeBridge.copy.includeDiagnostics": {
          "type": "boolean",
          "order": 20,
          "default": true,
          "markdownDescription": "Include active VS Code problems (errors/warnings) inline.",
          "scope": "resource"
        },
        "codeBridge.diagnostics.allowedSeverities": {
          "type": "object",
          "order": 21,
          "default": {
            "error": true,
            "warning": true,
            "info": false,
            "hint": false
          },
          "markdownDescription": "Filter diagnostics by severity.",
          "properties": {
            "error": {
              "type": "boolean",
              "default": true
            },
            "warning": {
              "type": "boolean",
              "default": true
            },
            "info": {
              "type": "boolean",
              "default": false
            },
            "hint": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "codeBridge.analysis.enabled": {
          "type": "boolean",
          "order": 30,
          "default": true,
          "markdownDescription": "**Impact Analysis**: Enables parsing of files to find dependencies.",
          "scope": "resource"
        },
        "codeBridge.analysis.autoCopyReferences": {
          "type": "boolean",
          "order": 31,
          "default": false,
          "markdownDescription": "**Context Expansion**: Automatically include files that *import* or *use* selected code.",
          "scope": "resource"
        },
        "codeBridge.analysis.maxAutoFiles": {
          "type": "number",
          "order": 32,
          "default": 5,
          "markdownDescription": "Safety limit for automatically added files.",
          "scope": "resource"
        },
        "codeBridge.prompt.custom": {
          "type": "object",
          "order": 40,
          "default": {
            "Analyze & Contextualize": "Act as a Principal Architect...",
            "Deep Code Review": "Review this code as a strict Senior Engineer...",
            "Refactor to Modern Standards": "Refactor this code for production...",
            "Write Technical Docs": "Generate developer-facing documentation..."
          },
          "markdownDescription": "Customize your AI personas.",
          "scope": "resource"
        },
        "codeBridge.generator.overwriteExisting": {
          "type": "boolean",
          "order": 50,
          "default": false,
          "markdownDescription": "Force overwrite existing files without confirmation.",
          "scope": "resource"
        },
        "codeBridge.generator.disableFileSelection": {
          "type": "boolean",
          "order": 51,
          "default": false,
          "markdownDescription": "Skip the file selection list and generate everything immediately.",
          "scope": "resource"
        },
        "codeBridge.tree.style": {
          "type": "string",
          "order": 60,
          "default": "classic",
          "enum": [
            "classic",
            "modern",
            "minimal",
            "markdown"
          ],
          "markdownDescription": "Visual style for the directory structure.",
          "scope": "resource"
        },
        "codeBridge.tree.includeHidden": {
          "type": "boolean",
          "order": 61,
          "default": false,
          "markdownDescription": "Include dotfiles (e.g., `.env`) in the tree output.",
          "scope": "resource"
        },
        "codeBridge.tree.maxDepth": {
          "type": "number",
          "order": 62,
          "default": 0,
          "markdownDescription": "Limit directory depth. `0` = Unlimited.",
          "scope": "resource"
        },
        "codeBridge.tree.directoriesOnly": {
          "type": "boolean",
          "order": 63,
          "default": false,
          "markdownDescription": "Hide files, show folder structure only.",
          "scope": "resource"
        },
        "codeBridge.exclude": {
          "type": "array",
          "order": 90,
          "default": [
            "node_modules",
            "vendor",
            ".pnpm",
            ".yarn",
            "dist",
            "build",
            "out",
            "target",
            ".next",
            ".nuxt",
            ".svelte-kit",
            ".output",
            ".cache",
            ".parcel-cache",
            ".vite",
            "__pycache__",
            ".pytest_cache",
            ".mypy_cache",
            "coverage",
            ".git",
            ".idea",
            ".vscode",
            ".gradle"
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Glob patterns to exclude from AI context (extends `files.exclude`). Use this for files you want to see in VS Code but hide from the AI.",
          "scope": "resource"
        }
      }
    }
  }
}
