{
  "name": "codebridge",
  "displayName": "CodeBridge: Context & File Utils",
  "description": "Smart clipboard utilities. Copy code with context, visualize folder structures, and scaffold files from text blocks.",
  "version": "2.6.0",
  "publisher": "fetchFromServer",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fetchFromServer/codebridge"
  },
  "bugs": {
    "url": "https://github.com/fetchFromServer/codebridge/issues"
  },
  "homepage": "https://github.com/fetchFromServer/codebridge/blob/main/README.md",
  "keywords": [
    "context",
    "copy code",
    "markdown",
    "scaffolding",
    "productivity",
    "clipboard",
    "documentation",
    "project tree"
  ],
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "main": "./dist/desktop/extension.js",
  "browser": "./dist/web/extension.js",
  "engines": {
    "vscode": "^1.108.1"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm-run-all --parallel compile:desktop compile:web",
    "watch": "npm-run-all --parallel watch:desktop watch:web",
    "package": "npm-run-all --parallel package:desktop package:web",
    "compile:desktop": "node esbuild.js --platform=desktop",
    "watch:desktop": "node esbuild.js --platform=desktop --watch",
    "package:desktop": "node esbuild.js --platform=desktop --production",
    "compile:web": "node esbuild.js --platform=web",
    "watch:web": "node esbuild.js --platform=web --production",
    "package:web": "node esbuild.js --platform=web --production",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.9",
    "@types/vscode": "^1.108.1",
    "@vscode/test-web": "^0.0.78",
    "esbuild": "^0.27.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.copyAllContents",
        "title": "Copy with Context",
        "icon": "$(copy)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyWithPrompt",
        "title": "Copy with Template...",
        "icon": "$(comment-discussion)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyWithDiagnostics",
        "title": "Copy with Issues",
        "icon": "$(bug)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyDiagnosticsOnly",
        "title": "Copy Problems Report",
        "icon": "$(error)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyProjectTree",
        "title": "Copy Project Tree",
        "icon": "$(list-tree)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyProjectTreeFolders",
        "title": "Copy Folder Structure",
        "icon": "$(folder)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyProjectTreeMarkdown",
        "title": "Copy Tree (Markdown)",
        "icon": "$(markdown)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyProjectTreeModern",
        "title": "Copy Tree (Modern)",
        "icon": "$(symbol-structure)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyProjectTreeClassic",
        "title": "Copy Tree (Classic)",
        "icon": "$(list-tree)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.copyProjectTreeShallow",
        "title": "Copy Top-Level Only",
        "icon": "$(list-flat)",
        "category": "CodeBridge"
      },
      {
        "command": "extension.generateFromClipboard",
        "title": "Scaffold Files from Clipboard",
        "icon": "$(new-file)",
        "category": "CodeBridge"
      }
    ],
    "submenus": [
      {
        "id": "codebridge.copyOptions",
        "label": "Context Actions",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyAllContents",
          "group": "1_cutcopypaste@1",
          "when": "filesExplorerFocus"
        },
        {
          "submenu": "codebridge.copyOptions",
          "group": "1_cutcopypaste@2",
          "when": "filesExplorerFocus"
        }
      ],
      "codebridge.copyOptions": [
        {
          "command": "extension.copyDiagnosticsOnly",
          "group": "1_problems@1"
        },
        {
          "command": "extension.copyWithDiagnostics",
          "group": "1_problems@2"
        },
        {
          "command": "extension.copyWithPrompt",
          "group": "2_smart@1"
        },
        {
          "command": "extension.copyProjectTree",
          "group": "3_structure@1"
        },
        {
          "command": "extension.copyProjectTreeFolders",
          "group": "3_structure@2"
        },
        {
          "command": "extension.generateFromClipboard",
          "group": "5_generation",
          "when": "filesExplorerFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.generateFromClipboard",
          "when": "filesExplorerFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.copyWithPrompt",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "extension.generateFromClipboard",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v"
      }
    ],
    "configuration": {
      "title": "CodeBridge",
      "properties": {
        "codeBridge.general.notifications": {
          "type": "string",
          "order": 1,
          "default": "all",
          "markdownDescription": "Controls status bar verbosity.",
          "enum": [
            "all",
            "errors",
            "none"
          ],
          "enumItemLabels": [
            "All",
            "Errors Only",
            "Silent"
          ]
        },
        "codeBridge.general.prompts": {
          "type": "object",
          "order": 2,
          "default": {
            "Architectural Plan": "Analyze the request but do NOT generate code yet. Create a detailed execution plan. Outline the architecture, data flow, key algorithms, and potential edge cases. Wait for confirmation.",
            "Rapid Prototype": "Create a functional solution immediately. Prioritize execution speed and working logic over clean abstractions or style guidelines. Produce a standalone implementation that solves the core problem now.",
            "Iterative Fix": "Analyze the error context. Do NOT revert to a previous state. Propose a specific fix that resolves the exception while preserving the recent logic updates. Iterate forward until execution succeeds.",
            "Generate Rulefile": "Extract the core business logic, naming conventions, and architectural patterns from this code into a Markdown format. This document will serve as the technical source of truth.",
            "Task Automation": "Generate a standalone, single-file script to automate this manual process. Use the most appropriate language for the environment. Keep dependencies minimal and logic linear."
          },
          "additionalProperties": {
            "type": "string"
          },
          "markdownDescription": "Templates for **Copy with Template**."
        },
        "codeBridge.copy.format": {
          "type": "string",
          "order": 10,
          "default": "markdown",
          "markdownDescription": "Output format for copied content.",
          "enum": [
            "markdown",
            "text"
          ],
          "enumItemLabels": [
            "Markdown",
            "Raw Text"
          ]
        },
        "codeBridge.copy.fenceStyle": {
          "type": "string",
          "order": 11,
          "default": "```",
          "markdownDescription": "Code block delimiters."
        },
        "codeBridge.copy.metadata": {
          "type": "object",
          "order": 12,
          "default": {
            "banner": false,
            "stats": false,
            "chars": false,
            "issuesSummary": false,
            "gitContext": false,
            "systemInfo": false,
            "fileMetadata": false
          },
          "markdownDescription": "Header information settings.",
          "additionalProperties": false,
          "properties": {
            "banner": {
              "type": "boolean",
              "default": false,
              "description": "Show summary banner."
            },
            "stats": {
              "type": "boolean",
              "default": false,
              "description": "Show line count and file size."
            },
            "chars": {
              "type": "boolean",
              "default": false,
              "description": "Show character count."
            },
            "issuesSummary": {
              "type": "boolean",
              "default": false,
              "description": "Show error summary."
            },
            "gitContext": {
              "type": "boolean",
              "default": false,
              "description": "Show project name/branch."
            },
            "systemInfo": {
              "type": "boolean",
              "default": false,
              "description": "Show Environment info."
            },
            "fileMetadata": {
              "type": "boolean",
              "default": false,
              "description": "Show modified timestamps."
            }
          }
        },
        "codeBridge.copy.transform": {
          "type": "object",
          "order": 13,
          "default": {
            "trimWhitespace": false,
            "embedIssues": true
          },
          "markdownDescription": "Content transformation.",
          "additionalProperties": false,
          "properties": {
            "trimWhitespace": {
              "type": "boolean",
              "default": false,
              "description": "Remove leading indentation."
            },
            "embedIssues": {
              "type": "boolean",
              "default": true,
              "description": "Inject errors as comments."
            }
          }
        },
        "codeBridge.analysis.strategy": {
          "type": "string",
          "order": 20,
          "default": "shallow",
          "markdownDescription": "Dependency discovery method.",
          "enum": [
            "none",
            "shallow",
            "deep"
          ],
          "enumItemLabels": [
            "Disabled",
            "Text-Based",
            "LSP-Based"
          ]
        },
        "codeBridge.analysis.autoExpand": {
          "type": "boolean",
          "order": 21,
          "default": false,
          "markdownDescription": "Automatically include discovered dependencies."
        },
        "codeBridge.analysis.maxFiles": {
          "type": "number",
          "order": 22,
          "default": 5,
          "minimum": 0,
          "markdownDescription": "Limit for auto-added files."
        },
        "codeBridge.analysis.symbolKinds": {
          "type": "array",
          "order": 23,
          "default": [
            "class",
            "function",
            "interface",
            "constant"
          ],
          "markdownDescription": "Symbols to trace (Deep strategy).",
          "items": {
            "type": "string",
            "enum": [
              "class",
              "function",
              "interface",
              "constant",
              "variable",
              "enum"
            ]
          }
        },
        "codeBridge.diagnostics.minimumSeverity": {
          "type": "string",
          "order": 25,
          "default": "warning",
          "markdownDescription": "Filter for included issues.",
          "enum": [
            "error",
            "warning",
            "info",
            "hint"
          ],
          "enumItemLabels": [
            "Critical",
            "Errors & Warnings",
            "Info",
            "All"
          ]
        },
        "codeBridge.diagnostics.contextLines": {
          "type": "number",
          "order": 26,
          "default": 2,
          "minimum": 0,
          "markdownDescription": "Lines of context around issues."
        },
        "codeBridge.diagnostics.embedStyle": {
          "type": "string",
          "order": 27,
          "default": "compact",
          "markdownDescription": "Format for inline issues.",
          "enum": [
            "compact",
            "detailed"
          ],
          "enumItemLabels": [
            "Compact",
            "Detailed"
          ]
        },
        "codeBridge.generator.conflictStrategy": {
          "type": "string",
          "order": 30,
          "default": "ask",
          "markdownDescription": "Behavior on file conflict.",
          "enum": [
            "ask",
            "overwrite",
            "skip"
          ],
          "enumItemLabels": [
            "Ask",
            "Overwrite",
            "Skip"
          ]
        },
        "codeBridge.generator.filenameWhitelist": {
          "type": "array",
          "order": 31,
          "default": [
            "package.json",
            "tsconfig.json",
            "Dockerfile",
            "Makefile",
            ".env",
            ".gitignore",
            ".editorconfig",
            ".prettierrc"
          ],
          "markdownDescription": "Allowed non-standard filenames.",
          "items": {
            "type": "string"
          }
        },
        "codeBridge.tree.style": {
          "type": "string",
          "order": 35,
          "default": "classic",
          "markdownDescription": "Tree visual style.",
          "enum": [
            "modern",
            "classic",
            "minimal",
            "markdown",
            "json"
          ],
          "enumItemLabels": [
            "Modern",
            "Classic",
            "Minimal",
            "Markdown",
            "JSON"
          ]
        },
        "codeBridge.tree.includeHidden": {
          "type": "boolean",
          "order": 36,
          "default": false,
          "markdownDescription": "Include dotfiles."
        },
        "codeBridge.tree.directoriesOnly": {
          "type": "boolean",
          "order": 37,
          "default": false,
          "markdownDescription": "Show folders only."
        },
        "codeBridge.tree.maxDepth": {
          "type": "number",
          "order": 38,
          "default": 0,
          "minimum": 0,
          "markdownDescription": "Recursion depth limit."
        },
        "codeBridge.safety.maxFileSizeKB": {
          "type": "number",
          "order": 90,
          "default": 10240,
          "minimum": 0,
          "markdownDescription": "Size limit per file (KB)."
        },
        "codeBridge.safety.clipboardWarningKB": {
          "type": "number",
          "order": 91,
          "default": 5120,
          "minimum": 0,
          "markdownDescription": "Warn threshold for clipboard size."
        },
        "codeBridge.filters.excludes": {
          "type": "array",
          "order": 95,
          "default": [
            "node_modules",
            "vendor",
            ".pnpm",
            ".yarn",
            "dist",
            "build",
            "out",
            "target",
            "coverage",
            ".git",
            ".idea",
            ".vscode"
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Global ignore patterns."
        },
        "codeBridge.filters.binaryExtensions": {
          "type": "array",
          "order": 96,
          "default": [
            ".png",
            ".jpg",
            ".jpeg",
            ".gif",
            ".webp",
            ".ico",
            ".pdf",
            ".zip",
            ".exe",
            ".dll",
            ".bin",
            ".node"
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Binary extension list."
        }
      }
    }
  }
}
