{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "problemMatcher": "$tsc",
            "label": "npm: compile"
        },
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "esbuild",
                "pattern": {
                    "regexp": "^\\s*(?:> )?([^\\s].*):(\\d+):(\\d+):\\s+(?:error|warning):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "^\\[watch\\].*build started"
                    },
                    "endsPattern": {
                        "regexp": "^\\[watch\\].*build finished"
                    }
                }
            }
        }
    ]
}